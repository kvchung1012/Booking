@model Booking.Model.ModelView.RoomDetailModelView
<style>
    .over {
        height: 100%;
        overflow-y: scroll;
    }
</style>
<div class="row h-100">
    <!--image-->
    <div class="col-md-4 over">
        @foreach (var item in Model.images)
        {
            <img src="@item.Image" class="w-100" />
        }
    </div>

    <div class="col-md-4 over">
        @foreach (var item in Model.items)
        {
        <div class="p-2">
            <b class="m-0">@item.item.Name </b>
            <p class="m-0">Số lượng : @item.stock</p>
        </div>
        }
    </div>

    <!--item-->
    <div class="col-md-4 over">
        @foreach (var item in Model.utiliti)
        {
        <div class="mb-2">
            <div class="">
                <b class="m-0"><i class="fas fa-fan"></i> @item.utiliti.Name</b>
            </div>
            <div class="">
                @foreach (var child in item.utilities)
                {
                    <p class="m-1"><i class="far fa-check-circle"></i> @child.Name <span class="surcharge">@child.SubName</span> </p>
                }
            </div>
        </div>
            
        }
    </div>
</div>