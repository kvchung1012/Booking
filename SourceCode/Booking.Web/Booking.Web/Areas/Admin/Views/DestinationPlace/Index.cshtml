
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="main-view">
    <div class="main-header mb-3">
        <div class="d-flex justify-content-between mb-2">
            <div class="pagesize">
                <select class="form-control pageSize">
                    <option value="1">1</option>
                    <option value="5">5</option>
                    <option value="10">10</option>
                    <option value="15">15</option>
                    <option value="20" selected>20</option>
                    <option value="50">50</option>
                </select>
            </div>
            <div class="action-form">
                <button class="btn btn-square btn-outline-primary" data-target="#FormSearch" data-toggle="collapse">Tìm kiếm</button>
                <button class="btn btn-square btn-primary" onclick="GetFormAddOrEdit('/Admin/DestinationPlace/GetFormAddOrEdit',0)">Thêm mới</button>
            </div>
        </div>

        <!--Form tìm kiếm-->
        <div class="collapse" id="FormSearch">
            <div class="row align-items-end">
                <div class="col-md-10 row justify-content-end">
                    <div class="col-md-4">
                        <div>Tên địa danh</div>
                        <input type="text" name="Name" class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <div>Thuộc tỉnh/thành phố</div>
                        <select class="form-control" name="ProvinceId" onchange="ChangeSelectProvince(this)">
                            <option value="0">---Chọn tỉnh/thành phố</option>
                            @foreach (var item in ViewBag.province as IEnumerable<Booking.Model.Model.Province>)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        </select>
                    </div>

                    <div class="col-md-4">
                        <div>Thuộc quận/huyện</div>
                        <select class="form-control" name="DistrictId" >
                            <option value="0">---Chọn quận/huyện</option>
                        </select>
                    </div>

                </div>
                <div class="col-md-2 d-flex p-0 justify-content-end" style="margin-left:15px">
                    <button class="btn btn-square btn-success w-100" onclick="Search(this)">Tìm kiếm</button>
                    <button class="btn btn-square btn-danger w-100" style="margin-left:15px" onclick="CancelSearch()">Hủy</button>
                </div>
            </div>
        </div>
        <!--Form Nhập liệu-->
        <div class="modal fade" id="FormAddOrEdit" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-xl" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Thêm mới người dùng</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        ...
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-square btn-success btn-save " onclick="AddOrUpdate(this,'/Admin/DestinationPlace/AddOrUpdate')">Thêm mới</button>
                        <button type="button" class="btn btn-square btn-danger" data-dismiss="modal">Hủy tác vụ</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="main-center-table">

    </div>
</div>

@section scripts{
    <script src="~/Content/Admin/js/AdminCommon.js"></script>
    <script>
        $(document).ready(function () {
            urlGetData = '/Admin/DestinationPlace/GetListData';
            ChangePageSize();
            GetDataToTable(urlGetData)
        })
    </script>

    <script>
        function ChangeSelectProvince(el) {
            let Id = $(el).val();
            SetDistrict(Id);
        }

        function SetDistrict(Id) {
            if (Id > 0) {
                $.ajax({
                    url: '/Admin/DestinationPlace/GetDistrictById',
                    type: 'post',
                    dataType: 'json',
                    data: {
                        Id: Id
                    },
                    success: function (res) {
                        console.log(res);
                        $('select[name=DistrictId]').html('');
                        let row = `<option value="0">---Chọn quận/huyện---</option>`;
                        $(res).each((i, e) => {
                            row += `<option value="${e.Id}">${e.Prefix + ' ' + e.Name}</option>`;
                        })
                        $('select[name=DistrictId]').append(row);
                    }
                })
            }
            else {
                $('select[name=DistrictId]').html('');
                let row = `<option value="0">---Chọn quận/huyện---</option>`;
                $('select[name=DistrictId]').append(row);
            }

        }
    </script>
}